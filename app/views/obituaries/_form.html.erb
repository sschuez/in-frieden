<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			
			<h2>Ihre Traueranzeige</h2>
			<br>

				<%= simple_form_for(@obituary) do |f| %>
					
					<div class="form-group">
						<%= f.label :first_name, "Name der Person" %>
						<%= f.text_field :first_name, class: 'form-control' %> 
					</div>
					
					<div class="form-group">
						<%= f.label :last_name, "Nachname" %>
						<%= f.text_field :last_name, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :residence, "Letzter Wohnort" %>
						<%= f.text_field :residence, class: 'form-control' %> 
					</div>

					<div class="form-group">
						<%= f.label :death_date, "Todestag" %>
						<%= f.date_field :death_date, class: 'form-control' %> 
					</div>

						<div class="form-group">
						<%= f.label :birth_date, "Geburtstag" %>
						<%= f.date_field :birth_date, class: 'form-control' %> 
					</div>

					<div class="form-group trix">
						<%= f.label :content, "Kurzprofil" %>
						<%= f.rich_text_area :content, class: 'form-control' %> 
					</div>
					
					<!-- Error messages -->
					<% if @obituary.errors.any? %>
						<div class="errors-container">
							<ul>
							  <% @obituary.errors.full_messages.each do |message| %>
							    <li><%= message %></li>
							  <% end %>
							</ul>
						</div>
					<% end %>

					<br>
					<p>Bevor die Seite veröffentlicht wird, können sie diese nochmals überprüfen.</p>
					<%= f.button :submit, "Todesanzeige erstellen", class: 'btn btn-flat' %>

				<% end %>

				<br>

		</div>
	</div>	
</div>

