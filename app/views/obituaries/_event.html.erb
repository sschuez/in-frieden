<% @obituary.events.each do |e| %>

<div class="event">
	
	<!-- Icons edit & delete top -->
	<% if user_signed_in? %>
		<div class="icons-top">

			<% if policy(@obituary).update? %>
				<!-- <div class="icon-edit"> -->
					<%= link_to edit_event_path(@obituary, e), class: "btn" do %>
				  	<i class="fas fa-edit"></i>
					<% end %>
				<!-- </div> -->
			<% end %>

			<% if policy(@obituary).update? %>
				<!-- <div class="icon-delete"> -->
					<%= link_to destroy_event_path(@obituary, e),
					      method: :delete,
					      data: { confirm: "Sind sie sicher, dass sie die Veranstaltung #{e.name} lÃ¶schen wollen?" },
					      class: "btn" do %>
							<i class="fas fa-trash-alt"></i>
					<% end %>
				<!-- </div> -->
			<% end %>

		</div>
	<% end %>

	<div class="event-location">

		<% markers = { 	lat: e.latitude,
										lng: e.longitude }
										# infoWindow: render_to_string(partial: "info_window", locals: { event: e }) } %>
		
		<div id="map"
		     style="width: 100%; height: 200px;"
		     data-markers="<%= markers.to_json %>"
		     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
		     	
		</div>
	</div>

	<div class="event-information">
		<h2><%= e.name %></h2>
	</div>
</div>

<% end %>