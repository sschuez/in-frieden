<!-- Icons edit & delete top -->
<div class="icons-top">

	<% if policy(@obituary).update? %>
		<div class="icon-edit">
			<%= link_to edit_obituary_path, class: "btn" do %>
		  	<i class="fas fa-edit"></i>
			<% end %>
		</div>
	<% end %>

	<% if policy(@obituary).destroy? %>
		<div class="icon-delete">
			<%= link_to obituary_path(@obituary),
			      method: :delete,
			      data: { confirm: "Sind sie sicher, dass sie die Traueranzeige von #{@obituary.full_name} lÃ¶schen wollen?" },
			      class: "btn" do %>
					<i class="fas fa-trash-alt"></i>
			<% end %>
		</div>
	<% end %>

</div>