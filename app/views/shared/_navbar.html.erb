<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo_transparent_small.png", style: "height: 50px; width: auto;" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
          
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Traueranzeigen", obituaries_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Artikel", articles_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Kontakt", contact_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Anzeige schalten", new_obituary_path, class: "btn btn-flat" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
               <%= cl_image_tag current_user.photo.key, :transformation=>[
                  {:width=>200, :height=>200, :gravity=>"face", :radius=>"max", :crop=>"thumb"},
                  {:width=>200, :crop=>"scale"}
                  ], 
                  class: "avatar dropdown-toggle", id: "navbarDropdown", alt: "avatar", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>

            <%= image_tag "default-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

            <% end %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.admin? %>
                <%= link_to "Dashboard", rails_admin.dashboard_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Profil", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
          
          <% else %>
          
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Traueranzeigen", obituaries_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Artikel", articles_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Kontakt", contact_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Anzeige schalten", new_obituary_path, class: "btn btn-flat" %>
            </li>
            <li class="nav-item">
              <%= link_to "Anmelden", new_user_session_path, class: "nav-link" %>
            </li>
          
          <% end %>
        </ul>
      </div>
    </div>
