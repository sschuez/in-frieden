<!-- SEO -->
<% content_for :meta_title, "#{@event.name} - Veranstaltung in Erinnerung an #{@obituary.full_name}" %>
<% if @event.content.present? %>
	<% content_for :meta_description, "In Erinnerung an #{@obituary.full_name} wurde eine Veranstaltung auf #{DEFAULT_META["meta_product_name"]} veröffentlicht. #{@event.content.to_s.delete_prefix('<div class="trix-content">
  <div>').gsub('</div>', '')}" %>
<% else %>
	<% content_for :meta_description, "In Erinnerung an #{@obituary.full_name} wurde eine Veranstaltung auf #{DEFAULT_META["meta_product_name"]} veröffentlicht. Alle Details zur Veranstaltung #{@event.name} finden sie under dem Link." %>
<% end %>
<%# content_for :meta_image, cl_image_path(@offer.photo.path) %>

<br>
<div class="container-fluid">

	<div class="row">
		<div class="col container-event">
			<br>
			<%= render 'icons_top' %>

			<% if @event.address.present? %>
			<div id="map"
					 class="map-container"
			     style="width: 100%; height: 300px;"
			     data-markers="<%= @markers.to_json %>"
			     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
			</div>
			<br>
			<% end %>
			
			<h2><%= @event.name %></h2>
			
			<% if @event.content.present? %>
				<p><%= @event.content %></p>
			<% end %>
			
			<% if @event.address.present? %>
				<p><strong class="strong">Ort:</strong> <%= @event.address %></p>
			<% end %>

			<% if @event.date.present? %>
				<p><strong class="strong">Datum:</strong> <%= @event.date.strftime('%d.%m.%Y') %></p>
			<% end %>

			<% if @event.time.present? %>
				<p><strong class="strong">Uhrzeit:</strong> <%= @event.time.strftime('%k:%M') %> Uhr</p>
			<% end %>

		</div>

	</div>
	<br>
	<br>
</div>