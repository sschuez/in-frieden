<br>
<div class="container-fluid">
	<%= render 'icons_top' %>

	<div class="row">
		<div class="col container-event">
			<br>

			<% if @event.address.present? %>
			<div id="map"
					 class="map-container"
			     style="width: 100%; height: 300px;"
			     data-markers="<%= @markers.to_json %>"
			     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
			</div>
			<br>
			<% end %>
			
			<h2><%= @event.name %></h2>
			
			<% if @event.content.present? %>
				<p><%= @event.content %></p>
			<% end %>
			
			<% if @event.address.present? %>
				<p><strong class="strong">Ort:</strong> <%= @event.address %></p>
			<% end %>

			<% if @event.date.present? %>
				<p><strong class="strong">Datum:</strong> <%= @event.date.strftime('%d.%m.%Y') %></p>
			<% end %>

			<% if @event.time.present? %>
				<p><strong class="strong">Uhrzeit:</strong> <%= @event.time.strftime('%k:%M') %> Uhr</p>
			<% end %>

		</div>

	</div>
	<br>
	<br>
</div>